<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="estilo_celda_peg">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">#ffaaaaaa</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="layout_info">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_80dp</item>
    </style>

    <style name="estilo_celda_2048">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/celda_2048</item>
        <item name="android:gravity">center</item>
        <item name="android:text">0</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowDy">15</item>
        <item name="android:shadowDx">15</item>
        <item name="android:shadowRadius">15</item>
        <item name="android:shadowColor">@color/grey</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="estilo_titulo_paginas_extra">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>


